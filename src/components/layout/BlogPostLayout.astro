---
import BaseLayout from './BaseLayout.astro';
import BlogFooterSection from '../blocks/BlogFooterSection.astro';
import AnnonceurModal from '../blocks/AnnonceurModal.astro';
import PartnersSection from '../blocks/PartnersSection.astro';
import FlickrGallery from '../atoms/FlickrGallery.astro';

interface Props {
  title: string;
  description: string;
  publishDate: Date;
  tags?: string[];
  flickrAlbumUrl?: string;
  albumTitle?: string;
  photoCredit?: string;
}

const {
  title,
  description,
  publishDate,
  tags = [],
  flickrAlbumUrl,
  albumTitle,
  photoCredit,
} = Astro.props;

const formattedDate = new Intl.DateTimeFormat('fr-FR', {
  day: '2-digit',
  month: 'long',
  year: 'numeric',
}).format(publishDate);
---

<BaseLayout title={title} description={description}>
  <section class="brutal-section brutal-section--white blog-post-section">
    <div class="brutal-container">
      <!-- Back Link -->
      <div class="blog-post-breadcrumb">
        <a href="/blog" class="blog-back-link">← Retour au blog</a>
      </div>

      <!-- Article Bandeau -->
      <div class="blog-bandeau">
        <h1 class="blog-bandeau-title">{title}</h1>
      </div>

      <!-- Article Header -->
      <header class="blog-post-header">
        <div class="blog-post-meta">
          <div class="blog-post-date">
            <span class="label">Publié le</span>
            <span class="value">{formattedDate}</span>
          </div>
        </div>

        {
          tags && tags.length > 0 && (
            <div class="blog-post-tags">
              {tags.map((tag) => (
                <span class="blog-post-tag">{tag}</span>
              ))}
            </div>
          )
        }
      </header>

      <!-- Article Content -->
      <article class="blog-post-content">
        <slot />
      </article>

      <!-- Flickr Gallery / Video -->
      {
        flickrAlbumUrl && (
          <div class="blog-post-gallery-wrapper">
            {flickrAlbumUrl.includes('/video/') || flickrAlbumUrl.endsWith('.mp4') ? (
              <figure class="video-card">
                <p class="video-intro">Revivez l'ambiance de la compétition !</p>
                <div class="video-wrapper">
                  <video controls width="100%" height="100%" class="blog-video" preload="metadata">
                    <source src={`${flickrAlbumUrl}#t=20`} type="video/mp4" />
                    Votre navigateur ne supporte pas la lecture de vidéos.
                  </video>
                </div>
                <figcaption class="video-caption">
                  {flickrAlbumUrl
                    .split('/')
                    .pop()
                    ?.replace('.mp4', '')
                    .split('-')
                    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
                    .join(' ')}
                </figcaption>
              </figure>
            ) : (
              <FlickrGallery
                flickrAlbumUrl={flickrAlbumUrl}
                albumTitle={albumTitle}
                photoCredit={photoCredit}
              />
            )}
          </div>
        )
      }

      <!-- Navigation (Prev/Next from [slug]) -->
      <slot name="navigation" />

      <!-- Footer Link -->
      <div class="blog-post-nav">
        <a href="/blog" class="brutal-btn">← Voir tous les articles</a>
      </div>
    </div>
  </section>
  <PartnersSection />
  <BlogFooterSection />
  <AnnonceurModal />
</BaseLayout>

<style>
  .blog-post-section {
    padding: var(--space-large) 0;
  }

  .blog-post-breadcrumb {
    margin-bottom: 2rem;
  }

  .blog-back-link {
    color: var(--brutal-ice);
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.95rem;
    letter-spacing: 0.05em;
    transition: color 0.2s ease;
  }

  .blog-back-link:hover {
    color: var(--brutal-black);
  }

  .blog-bandeau {
    position: relative;
    width: 100%;
    aspect-ratio: 1024 / 563;
    background: url('/images/bandeau-blog-2026.webp') no-repeat center center;
    background-size: contain;
    background-position: center;
    background-color: var(--brutal-white);
    overflow: hidden;
    margin-bottom: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blog-bandeau-title {
    position: absolute;
    left: 40%;
    top: 82%;
    transform: translate(-50%, -50%);

    /* Contraintes zone texte */
    width: 80%;
    max-width: 900px;
    padding: 0 1rem;

    /* Style texte */
    color: #ffffff;
    font-family: 'Inter', sans-serif;
    font-weight: 900;
    text-transform: uppercase;
    font-size: clamp(1.8rem, 4vw, 3.2rem);
    line-height: 1.1;
    text-align: center;

    /* Limiter à 2 lignes */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

    /* Premium Text Shadow */
    text-shadow: 0 4px 24px rgba(0, 0, 0, 0.6);
  }

  .blog-post-header {
    margin-bottom: 2rem;
  }

  .blog-post-meta {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 3px solid var(--brutal-black);
    flex-wrap: wrap;
  }

  .blog-post-date {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .blog-post-meta .label {
    font-size: 0.85rem;
    color: var(--brutal-gray);
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .blog-post-meta .value {
    font-weight: 700;
    font-size: 1rem;
  }

  .blog-post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .blog-post-tag {
    font-size: 0.8rem;
    padding: 0.4rem 1rem;
    background: var(--brutal-ice);
    color: var(--brutal-black);
    border: 2px solid var(--brutal-black);
    display: inline-block;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.05em;
    box-shadow: 4px 4px 0 var(--brutal-black);
  }

  .blog-post-content {
    max-width: 800px;
    margin: 0 auto 4rem;
    font-size: 1.05rem;
    line-height: 1.7;
  }

  /* Markdown Styles */
  .blog-post-content :global(h1) {
    font-size: 2.5rem;
    margin-top: 0;
    margin-bottom: 2rem;
    text-shadow: 4px 4px 0 var(--brutal-ice);
    padding-bottom: 1rem;
    border-bottom: 3px solid var(--brutal-black);
    color: var(--brutal-black);
  }

  .blog-post-content :global(h2) {
    font-size: 2rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    text-shadow: 3px 3px 0 var(--brutal-ice);
    padding-bottom: 0.75rem;
    border-bottom: 3px solid var(--brutal-black);
  }

  .blog-post-content :global(h3) {
    font-size: 1.5rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .blog-post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .blog-post-content :global(ul),
  .blog-post-content :global(ol) {
    margin-left: 2rem;
    margin-bottom: 1.5rem;
  }

  .blog-post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .blog-post-content :global(blockquote) {
    border-left: 4px solid var(--brutal-ice);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--brutal-gray);
  }

  .blog-post-content :global(code) {
    background: var(--brutal-gray);
    color: var(--brutal-white);
    padding: 0.25rem 0.5rem;
    border-radius: 2px;
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
  }

  .blog-post-content :global(pre) {
    background: var(--brutal-black);
    color: var(--brutal-white);
    padding: 1.5rem;
    border-radius: 4px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    border: 3px solid var(--brutal-ice);
  }

  .blog-post-content :global(pre code) {
    background: none;
    color: inherit;
    padding: 0;
  }

  .blog-post-content :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    border: 3px solid var(--brutal-black);
    box-shadow: 8px 8px 0 var(--brutal-black);
  }

  .blog-post-gallery-wrapper {
    max-width: 900px;
    margin: 0 auto 4rem;
  }

  .blog-post-nav {
    text-align: center;
    padding-top: 2rem;
    margin-top: 4rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-bandeau {
      aspect-ratio: 16 / 10;
      margin-bottom: 2rem;
    }

    .blog-bandeau-title {
      font-size: clamp(1.2rem, 5vw, 1.8rem);
      max-width: 90%;
      width: 90%;
    }

    .blog-post-meta {
      flex-direction: column;
      gap: 1rem;
    }

    .blog-post-content {
      font-size: 1rem;
    }

    .blog-post-content :global(h2) {
      font-size: 1.5rem;
    }

    .blog-post-content :global(h3) {
      font-size: 1.25rem;
    }
  }

  /* Video Card Style */
  .video-card {
    margin: 3rem auto;
    background: var(--brutal-white);
    border: 3px solid var(--brutal-black);
    padding: 0.75rem 0.75rem 1.5rem 0.75rem; /* Padding bottom plus large pour l'espace texte */
    box-shadow: 8px 8px 0 var(--brutal-ice); /* Ombre bleue comme sur le screen */
    transform: rotate(-2deg);
    max-width: 600px; /* Limiter la largeur pour l'effet carte */
    transition: transform 0.3s ease;
  }

  .video-card:hover {
    transform: rotate(0deg) scale(1.02);
    box-shadow: 12px 12px 0 var(--brutal-ice);
  }

  .video-wrapper {
    border: 2px solid var(--brutal-black);
    overflow: hidden;
    background: #000;
    aspect-ratio: 16 / 9;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blog-video {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-caption {
    margin-top: 1rem;
    text-align: center;
    font-family: 'Inter', sans-serif;
    font-weight: 900;
    text-transform: uppercase;
    font-size: 1.25rem;
    color: var(--brutal-black);
    line-height: 1.2;
    padding: 0 0.5rem;
  }

  .video-intro {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 1rem;
    color: var(--brutal-black);
    margin: 0 0 1rem 0;
    text-align: center;
    letter-spacing: 0.05em;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .video-card {
      margin: 2rem 0;
      box-shadow: 6px 6px 0 var(--brutal-ice);
      padding: 0.5rem;
      transform: rotate(0deg);
    }
  }

  .album-intro {
    margin: 0 0 1.5rem 0;
    padding: 1rem 1.25rem;
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--brutal-ice);
    font-weight: 500;
    border: 3px solid var(--brutal-ice);
    background: var(--brutal-black);
    box-shadow: 6px 6px 0 var(--brutal-ice);
  }

  .album-intro strong {
    font-weight: 800;
    text-transform: uppercase;
    color: var(--brutal-ice);
  }
</style>

<script>
  // Gestion de la lecture vidéo : reset au début lors du premier clic
  function setupVideo() {
    const videos = document.querySelectorAll('video.blog-video');
    videos.forEach((video) => {
      const v = video as HTMLVideoElement;
      v.addEventListener('play', () => {
        if (!v.hasAttribute('data-has-played')) {
          v.currentTime = 0;
          v.setAttribute('data-has-played', 'true');
        }
      });
    });
  }

  // Exécuter au chargement initial et après navigation (View Transitions)
  setupVideo();
  document.addEventListener('astro:page-load', setupVideo);
</script>
