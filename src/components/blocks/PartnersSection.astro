---
import BrutalHeading from '../atoms/BrutalHeading.astro';
import BrutalCard from '../atoms/BrutalCard.astro';
import PartnerCard from '../atoms/PartnerCard.astro';
import { competitionData } from '../../data/competition-data.js';

const { ffme, club, collectivites } = competitionData.partners;
---

<section class="brutal-section brutal-section--black partners-section">
  <div class="brutal-container">
    <div class="title-center">
      <BrutalHeading level={2} shadow={true} rotation={-1} class="brutal-title text-l2">
        NOS PARTENAIRES
      </BrutalHeading>
    </div>

    <div class="partners-grid">
      <!-- Partenaires officiels FFME -->
      <BrutalCard
        variant="mint"
        rotation={-2}
        className="partners-subsection"
        customBorder="4px solid var(--brutal-white)"
        customShadow="8px 8px 0 var(--brutal-white)"
      >
        <div class="subsection-content">
          <h3 class="subsection-title">{ffme.title}</h3>
          <div class="partners-list-centered">
            {ffme.items.map((partner) => (
              <PartnerCard
                src={partner.src}
                alt={partner.alt}
                url={partner.url}
                rotation={partner.rotation}
                width={partner.width}
                height={partner.height}
                caption={partner.caption}
              />
            ))}
          </div>
        </div>
      </BrutalCard>

      <!-- Partenaires du club -->
      <BrutalCard
        variant="mint"
        rotation={-1}
        className="partners-subsection"
        customBorder="4px solid var(--brutal-white)"
        customShadow="8px 8px 0 var(--brutal-white)"
      >
        <div class="subsection-content">
          <h3 class="subsection-title">{club.title}</h3>
          <div class="partners-list-centered">
            {club.items.map((partner) => (
              <PartnerCard
                src={partner.src}
                alt={partner.alt}
                url={partner.url}
                rotation={partner.rotation}
                width={partner.width}
                height={partner.height}
              />
            ))}
          </div>
        </div>
      </BrutalCard>

      <!-- Collectivités -->
      <BrutalCard
        variant="mint"
        rotation={1}
        className="partners-subsection"
        customBorder="4px solid var(--brutal-white)"
        customShadow="8px 8px 0 var(--brutal-white)"
      >
        <div class="subsection-content">
          <h3 class="subsection-title">{collectivites.title}</h3>
          <div class="partners-list-container">
            <!-- Première ligne : 4 collectivités -->
            <div class="partners-row partners-row--four">
              {collectivites.items.slice(0, 4).map((partner) => (
                <PartnerCard
                  src={partner.src}
                  alt={partner.alt}
                  url={partner.url}
                  rotation={partner.rotation}
                  width={partner.width}
                  height={partner.height}
                />
              ))}
            </div>

            <!-- Deuxième ligne : 3 collectivités centrées -->
            <div class="partners-row partners-row--three">
              {collectivites.items.slice(4, 7).map((partner) => (
                <PartnerCard
                  src={partner.src}
                  alt={partner.alt}
                  url={partner.url}
                  rotation={partner.rotation}
                  width={partner.width}
                  height={partner.height}
                />
              ))}
            </div>
          </div>
        </div>
      </BrutalCard>
    </div>
  </div>
</section>

<style>
.partners-section {
  background-color: var(--brutal-black);
  color: var(--brutal-white);
  padding: 5rem 0;
  min-height: 80vh;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.title-center {
  text-align: center;
}

/* Plus besoin - utilise les classes globales brutal.css */

.partners-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
  margin-top: 4rem;
}

.partners-subsection {
  min-height: 400px;
}

/* Force les contours et ombres blancs sur fond noir */
.partners-section .brutal-card--mint {
  border: 4px solid var(--brutal-white) !important;
  box-shadow: 8px 8px 0 var(--brutal-white) !important;
}

.partners-section .brutal-card--mint:hover {
  box-shadow: 16px 16px 0 var(--brutal-white) !important;
}

.subsection-content {
  padding: 2.5rem;
  height: 100%;
}

.subsection-title {
  font-family: var(--font-heading);
  font-size: 1.8rem;
  color: var(--brutal-black);
  margin-bottom: 2rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  text-align: center;
}

.partners-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: 1.5rem;
  justify-content: center;
  align-items: center;
}

/* Centrage pour les 3 partenaires officiels */
.partners-list-centered {
  display: flex;
  justify-content: center;
  gap: 2rem;
  flex-wrap: wrap;
}

/* Styles pour la disposition 4+3 des collectivités */
.partners-list-container {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.partners-row {
  display: flex;
  gap: 1rem;
  flex-wrap: nowrap;
}

.partners-row--four {
  justify-content: space-between;
}

.partners-row--four > .partner-card-link {
  flex: 1;
  max-width: calc(25% - 0.75rem);
}

.partners-row--three {
  justify-content: center;
  gap: 1.5rem;
}

.partners-row--three > .partner-card-link {
  flex: 0 0 auto;
}

@media (max-width: 768px) {
  .partners-section {
    padding: 3rem 0;
  }
  
  .partners-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .subsection-content {
    padding: 2rem;
  }
  
  .subsection-title {
    font-size: 1.5rem;
  }
  
  .partners-row {
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }
  
  .partners-row--four > .partner-card-link,
  .partners-row--three > .partner-card-link {
    max-width: none;
    width: 140px;
  }
}
</style>