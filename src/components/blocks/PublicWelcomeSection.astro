---
import BrutalHeading from '../atoms/BrutalHeading.astro';
import BrutalBadge from '../atoms/BrutalBadge.astro';
import BrutalCard from '../atoms/BrutalCard.astro';
import competitionData from '../../data/competition-data.js';

const { publicInfo, competitorsInfo } = competitionData;
---

<section class="brutal-section brutal-section--white">
  <div class="brutal-container">
    <div class="section-header">
      <BrutalHeading level={2} rotation={-1} shadow={true} class="brutal-title">
        UN WEEK-END<br>D'ESCALADE INTENSE
      </BrutalHeading>
    </div>
    
    <!-- üî• CADRE 1 : L'√âV√âNEMENT -->
    <div class="competition-fact" style="
      background: var(--brutal-black);
      color: var(--brutal-ice);
      border: 4px solid var(--brutal-ice);
      box-shadow: 8px 8px 0 var(--brutal-ice);
      padding: 2rem;
      margin: 3rem 0 2rem;
      transform: rotate(-1deg);
      font-size: 1.25rem;
      line-height: 1.6;
      text-align: center;
      font-weight: 700;
      width: 100%;
    ">
      <p style="margin: 0;">
        üî• Plus de 
        <span style="
          background: var(--brutal-ice);
          color: var(--brutal-black);
          padding: 0.1rem 0.4rem;
          display: inline-block;
          font-family: 'Space Mono', monospace;
          font-size: 1rem;
          font-weight: 700;
          text-transform: uppercase;
          letter-spacing: 0.02em;
          transform: rotate(-0.5deg);
        ">300 jeunes grimpeurs</span>, 
        <span style="
          background: var(--brutal-ice);
          color: var(--brutal-black);
          padding: 0.1rem 0.4rem;
          display: inline-block;
          font-family: 'Space Mono', monospace;
          font-size: 1rem;
          font-weight: 700;
          text-transform: uppercase;
          letter-spacing: 0.02em;
          transform: rotate(0.5deg);
        ">6 cat√©gories</span>, 
        un seul objectif : d√©crocher le titre de 
        <span style="
          background: var(--brutal-ice);
          color: var(--brutal-black);
          padding: 0.1rem 0.4rem;
          display: inline-block;
          font-family: 'Space Mono', monospace;
          font-size: 1rem;
          font-weight: 700;
          text-transform: uppercase;
          letter-spacing: 0.02em;
          transform: rotate(-0.5deg);
        ">Champion de France</span>
      </p>
    </div>
    
    <div class="two-columns">
      <!-- Colonne PUBLIC -->
      <BrutalCard variant="mint" rotation={1}>
        <BrutalHeading level={3} rotation={1}>
          {publicInfo.subtitle}
        </BrutalHeading>
        <ul class="benefit-list">
          {publicInfo.points.map(point => (
            <li>{point}</li>
          ))}
        </ul>
        <div class="brutal-cta-box">
          {publicInfo.callToAction}
        </div>
      </BrutalCard>
      
      <!-- Colonne COMP√âTITEURS -->
      <BrutalCard variant="black" rotation={-1}>
        <BrutalHeading level={3} rotation={-1}>
          {competitorsInfo.subtitle}
        </BrutalHeading>
        <ul class="benefit-list">
          {competitorsInfo.points.map(point => (
            <li>{point}</li>
          ))}
        </ul>
        <div class="brutal-cta-box brutal-cta-box--mint">
          {competitorsInfo.callToAction}
        </div>
        {competitorsInfo.important && (
          <p style="color: var(--brutal-ice); font-weight: 700; margin-top: 2rem;">
            {competitorsInfo.important}
          </p>
        )}
      </BrutalCard>
    </div>
    
    <!-- üí• CADRE 2 : L'EXP√âRIENCE -->
    <div class="competition-emotion" style="
      background: var(--brutal-ice);
      color: var(--brutal-black);
      border: 4px solid var(--brutal-black);
      box-shadow: 8px 8px 0 var(--brutal-black);
      padding: 2rem;
      margin: 2rem 0 0;
      transform: rotate(1deg);
      font-size: 1.25rem;
      line-height: 1.6;
      text-align: center;
      font-weight: 700;
      width: 100%;
    ">
      <p style="margin: 0;">
        üí• Vibrez au rythme des 
        <span style="
          background: var(--brutal-black);
          color: var(--brutal-white);
          padding: 0.1rem 0.4rem;
          display: inline-block;
          font-family: 'Space Mono', monospace;
          font-size: 1rem;
          font-weight: 700;
          text-transform: uppercase;
          letter-spacing: 0.02em;
          transform: rotate(0.5deg);
        ">qualifications</span>, 
        tremblez pendant les 
        <span style="
          background: var(--brutal-black);
          color: var(--brutal-white);
          padding: 0.1rem 0.4rem;
          display: inline-block;
          font-family: 'Space Mono', monospace;
          font-size: 1rem;
          font-weight: 700;
          text-transform: uppercase;
          letter-spacing: 0.02em;
          transform: rotate(-0.5deg);
        ">finales</span>‚Ä¶ 
        et assistez √† la naissance des 
        <span style="
          background: var(--brutal-black);
          color: var(--brutal-white);
          padding: 0.1rem 0.4rem;
          display: inline-block;
          font-family: 'Space Mono', monospace;
          font-size: 1rem;
          font-weight: 700;
          text-transform: uppercase;
          letter-spacing: 0.02em;
          transform: rotate(0.5deg);
        ">futures stars</span> 
        de l'escalade !
      </p>
    </div>
  </div>
</section>

<style>
  /* Utilise les patterns CSS existants (DRY) */
  .benefit-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
  }
  
  .benefit-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }
  
  .benefit-list li:last-child {
    border-bottom: none;
  }
  
  /* Styles h3 supprim√©s - g√©r√©s par BrutalHeading */
  
  /* Style bouton pour le CTA */
  .brutal-cta-box {
    background: var(--brutal-black);
    color: var(--brutal-white);
    font-weight: 900;
    padding: 1rem 1.5rem;
    margin-top: 2rem;
    border: 4px solid var(--brutal-black);
    text-align: center;
    font-size: 1rem;
    text-transform: uppercase;
    transition: all 0.3s ease;
    display: inline-block;
  }
  
  .brutal-cta-box:hover {
    background: var(--brutal-white);
    color: var(--brutal-black);
    transform: translate(-2px, -2px);
  }
  
  /* Styles sp√©cifiques pour benefit-list dans les cartes */
  .brutal-card--mint .benefit-list li {
    border-bottom: 1px solid rgba(0,0,0,0.2);
  }
  
  .brutal-card--black .benefit-list li {
    border-bottom: 1px solid rgba(255,255,255,0.2);
  }
  
  /* Bouton CTA version mint pour comp√©titeurs */
  .brutal-cta-box--mint {
    background: var(--brutal-ice);
    color: var(--brutal-black);
    border: 4px solid var(--brutal-ice);
  }
  
  .brutal-cta-box--mint:hover {
    background: var(--brutal-black);
    color: var(--brutal-ice);
    border-color: var(--brutal-ice);
  }
  
  /* Animations hover pour les cadres */
  .competition-fact,
  .competition-emotion {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .competition-fact:hover {
    transform: rotate(0deg) scale(1.02);
    box-shadow: 12px 12px 0 var(--brutal-ice);
  }
  
  .competition-emotion:hover {
    transform: rotate(0deg) scale(1.02);
    box-shadow: 12px 12px 0 var(--brutal-black);
  }
  
  /* Responsive pour les cadres */
  @media (max-width: 768px) {
    .competition-fact,
    .competition-emotion {
      transform: rotate(0deg);
      font-size: 1rem;
    }
    
    .competition-fact span,
    .competition-emotion span {
      font-size: 1.25rem;
    }
  }
</style>