---
export interface Props {
  name: string;
  stPierreVictory: string; // Ex: "ü•â Bronze Youth A - Coupe d'Europe 2019"
  achievements: string[];
  photoUrl?: string; // URL photo IFSC/FFME
  rotation?: number;
  variant?: 'mint' | 'white' | 'black';
}

const { 
  name,
  stPierreVictory,
  achievements,
  photoUrl,
  rotation = Math.random() * 4 - 2, // -2 √† 2deg
  variant = 'white'
} = Astro.props;

const cardClass = variant === 'white' 
  ? 'brutal-card' 
  : `brutal-card brutal-card--${variant}`;

// Classe pour rotation hover bas√©e sur la rotation de base
const rotationClass = rotation > 0 ? 'brutal-card--rot-positive' 
  : rotation < 0 ? 'brutal-card--rot-negative' 
  : 'brutal-card--rot-zero';
---

<div class={`champion-card ${rotationClass}`} style={`transform: rotate(${rotation}deg)`}>
  <!-- FACE AVANT : Photo + Nom + Victoire √† St-Pierre -->
  <div class={`card-front ${cardClass}`}>
    <div class="champion-photo">
      {photoUrl ? (
        <img src={photoUrl} alt={name} loading="lazy" />
      ) : (
        <div class="photo-placeholder">
          <span class="placeholder-text">üì∏</span>
        </div>
      )}
    </div>
    <h4 class="champion-name">{name}</h4>
    <div class="st-pierre-victory">{stPierreVictory}</div>
  </div>
  
  <!-- FACE ARRI√àRE : Achievements complets -->
  <div class="card-back brutal-card brutal-card--mint">
    <h4 class="champion-name-back">{name}</h4>
    <ul class="achievements-list">
      {achievements.map(achievement => (
        <li>{achievement}</li>
      ))}
    </ul>
  </div>
</div>

<style>
  .champion-card {
    position: relative;
    height: 280px;
    perspective: 1000px;
    cursor: pointer;
    transition: transform 0.2s ease;
    z-index: 1;
    box-sizing: border-box !important;
    /* Suppression margin pour compatibilit√© avec nouvelle logique grid */
  }

  .card-front, .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    transition: transform 0.6s cubic-bezier(0.4, 0.0, 0.2, 1);
    display: flex;
    flex-direction: column;
    padding: 1rem;
    box-sizing: border-box;
  }

  .card-front {
    transform: rotateY(0deg);
    text-align: center;
    justify-content: space-between;
  }

  .card-back {
    transform: rotateY(-180deg);
    justify-content: center;
    padding: 1.5rem;
  }

  /* Hover/tap flip */
  .champion-card:hover .card-front {
    transform: rotateY(180deg);
  }

  .champion-card:hover .card-back {
    transform: rotateY(0deg);
  }

  /* Photo agrandie */
  .champion-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto 0.75rem;
    border: 4px solid var(--brutal-black);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .champion-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .photo-placeholder {
    width: 100%;
    height: 100%;
    background: var(--brutal-ice);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-text {
    font-size: 2rem;
  }

  /* Textes face avant */
  .champion-name {
    font-family: 'Inter', sans-serif;
    font-weight: 800;
    font-size: 1rem;
    text-transform: uppercase;
    margin-bottom: 0.25rem;
    line-height: 1.1;
    color: inherit;
  }

  .st-pierre-victory {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 0.75rem;
    color: inherit;
    opacity: 0.9;
    line-height: 1.2;
  }

  /* Face arri√®re */
  .champion-name-back {
    font-family: 'Inter', sans-serif;
    font-weight: 800;
    font-size: var(--size-l6);
    text-transform: uppercase;
    margin-bottom: 1rem;
    text-align: center;
    color: var(--brutal-black);
  }

  .achievements-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .achievements-list li {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    padding-left: 1rem;
    position: relative;
    color: var(--brutal-black);
    line-height: 1.4;
  }

  .achievements-list li::before {
    content: "‚≠ê";
    position: absolute;
    left: 0;
    font-size: 0.875rem;
  }

  /* Tablet : optimisation pour largeur r√©duite */
  @media (max-width: 1024px) and (min-width: 769px) {
    .champion-card {
      height: 260px; /* L√©g√®rement r√©duit */
    }
    
    .champion-photo {
      width: 90px;
      height: 90px;
      margin-bottom: 0.5rem;
    }
    
    .champion-name {
      font-size: 0.9rem;
      margin-bottom: 0.25rem;
    }
    
    .st-pierre-victory {
      font-size: 0.75rem;
    }
  }

  /* Mobile: tap to expand */
  @media (max-width: 768px) {
    .champion-card:active .card-front {
      transform: rotateY(180deg);
    }
    
    .champion-card:active .card-back {
      transform: rotateY(0deg);
    }

    .champion-name {
      font-size: var(--size-l6);
    }

    .achievements-list li {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }
  }

  /* Hover micro-interactions */
  .champion-card:hover {
    transform: rotate(0deg) scale(1.02);
    z-index: 10; /* Priorit√© au hover pour √©viter chevauchement */
  }

  .champion-photo {
    transition: transform 0.3s ease;
  }

  .champion-card:hover .champion-photo {
    transform: scale(1.1);
  }

  /* Focus accessibilit√© */
  .champion-card:focus-visible {
    outline: 3px solid var(--brutal-ice);
    outline-offset: 4px;
  }

  .champion-card:focus-visible .card-front {
    transform: rotateY(180deg);
  }

  .champion-card:focus-visible .card-back {
    transform: rotateY(0deg);
  }
</style>